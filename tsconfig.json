{
  "include": [
    "./src/**/*"
, "unit"  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "dom",
      "ESNext",
    ],
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}